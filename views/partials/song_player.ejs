<aside class="music-player p-3 bg-light shadow-sm" style="position: fixed; bottom: 0; left: 0; height: 100vh; width: 300px;">
    <div class="d-flex flex-column align-items-center justify-content-end h-100">
        <!-- Song Image -->
        <img id="player-image" src="<%= image || '/img/default-song.jpg' %>" alt="Song image" class="img-fluid mb-3" style="width: 150px; height: 150px;">
        
        <!-- Current Song Info -->
        <div class="text-center mb-3">
            <h6 id="player-title" class="mb-0"><%= title || 'No song playing' %></h6>
            <small id="player-artist"><%= artist || 'Unknown artist' %></small>
        </div>

        <!-- Audio Player -->
        <div class="audio-player w-100">
            <audio id="audio-player" controls class="w-100">
                <source src="<%= audioSrc || '' %>" type="audio/mpeg">
                Your browser does not support the audio element.
            </audio>
        </div>
    </div>
</aside>