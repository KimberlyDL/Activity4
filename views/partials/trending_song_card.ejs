<div class="card mb-3 song-card" 
    data-id="<%= id %>" 
    data-title="<%= title %>" 
    data-artist="<%= artist %>" 
    data-image="<%= image %>">
  <div class="row g-0 align-items-center">
    <!-- Rank on the left -->
    <div class="col-md-1 text-center">
      <div class="card-body">
        <h5 class="card-title mb-1"><%= rank %></h5>
      </div>
    </div>

    <!-- Song Image -->
    <div class="col-md-2 py-2">
      <img src="<%= image || '/img/song/red.jpg' %>" alt="" class="img-fluid rounded-corners" style="width: 100px; height: 100px;">
    </div>

    <!-- Song Info -->
    <div class="col-md-5 d-flex align-items-center">
      <div class="card-body">
        <h5 class="card-title mb-1"><%= title %></h5>
        <p class="card-text mb-0"><%= artist %></p>
      </div>
    </div>

    <!-- Genre Info -->
    <div class="col-md-2 text-center">
      <p class="card-text mb-0"><%= genre %></p>
    </div>

    <!-- Icons (Heart and Plus Icon) -->
    <div class="col-md-2 d-flex align-items-center justify-content-center">
      <form action="/favorites" method="POST" class="me-3">
        <input type="hidden" name="title" value="<%= title %>">
        <button type="submit" style="border: none; background: none;">
          <i class="fas fa-heart" style="cursor: pointer; color: red;"></i>
        </button>
      </form>
      <i class="fas fa-plus" style="cursor: pointer;"></i>
    </div>
  </div>
</div>